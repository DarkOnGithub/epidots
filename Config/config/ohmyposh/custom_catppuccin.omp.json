{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#a6e3a1",
    "template": "❯ "
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "leading_diamond": "",
          "trailing_diamond": "",
          "background": "#89b4fa",
          "foreground": "#1e1e2e",
          "template": " {{ .Icon }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "#f5c2e7",
          "foreground": "#1e1e2e",
          "properties": {
            "style": "folder"
          },
          "template": "  {{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "#cba6f7",
          "foreground": "#1e1e2e",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#fab387{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#f9e2af{{ end }}",
            "{{ if gt .Ahead 0 }}#a6e3a1{{ end }}",
            "{{ if gt .Behind 0 }}#f9e2af{{ end }}"
          ],
          "template": " {{ .HEAD }}{{ if .Staging.Changed }}  {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }}  {{ .Working.String }}{{ end }} "
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "#94e2d5",
          "foreground": "#1e1e2e",
          "template": "  {{ .Full }} "
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "",
          "background": "#f9e2af",
          "foreground": "#1e1e2e",
          "template": "  {{ .Full }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#f9e2af",
          "background": "transparent",
          "template": "took {{ .FormattedMs }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#a6e3a1",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#f38ba8{{ end }}"
          ],
          "background": "transparent",
          "template": "❯"
        }
      ]
    }
  ]
}
